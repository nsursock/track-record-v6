                            <option value="Swimming pool">Swimming pool</option>
                            <option value="Jacuzzi">Jacuzzi</option>
                            <option value="Sea and beach">Sea and beach</option>
                        </select>
                    </div>
                    <div class="form-control">
                        <label class="label cursor-pointer">
                            <span class="label-text">Artist must have committed at least one murder</span>
                            <input type="checkbox" class="checkbox checkbox-primary" x-model="criminal">
                        </label>
                    </div>
                </div>
            </div>
