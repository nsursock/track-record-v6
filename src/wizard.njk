        <!-- Step 3 -->
        <div class="flex justify-center">
            <div class="w-full space-y-4 flex flex-col gap-2">
                <div class="w-full">
                    <label class="label-text" for="profit">Desired profit ($ millions)</label>
                    <div class="input input-bordered w-full space-x-3">
                        <span class="icon-[tabler--currency-dollar] text-base-content/80 my-auto size-5 shrink-0"></span>
                        <input type="number" id="profit" class="grow" x-model="profit" placeholder="00.00">
                        <span class="label-text my-auto">USD</span>
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <button class="btn btn-primary w-full" @click="generate">Create Video</button>
                    <button class="btn btn-soft btn-secondary w-full" @click="copyPrompt">Copy Prompt</button>
                </div>
            </div>
        </div>

        <!-- Output -->
        <template x-if="videoUrl">
            <div class="card bg-base-200">
                <div class="card-body">
                    <h3 class="card-title">Your video is ready!</h3>
                    <video class="w-full mt-2 rounded-box" controls :src="videoUrl"></video>
                </div>
            </div>
