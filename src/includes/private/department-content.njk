{% macro departmentContent() %}
<div class="tab-content">
  <div class="tab-pane active" id="executive">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">🧠 Executive / Leadership</h2>
        <ul class="list-disc list-inside">
          <li>Sets the vision and strategy</li>
          <li>Makes key business decisions</li>
          <li>Oversees all departments</li>
          <li>Often includes CEO, COO, CFO, etc.</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="marketing">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">📈 Marketing</h2>
        <ul class="list-disc list-inside">
          <li>Promotes the product or service</li>
          <li>Manages brand identity</li>
          <li>Runs campaigns, SEO, social media, email, PR</li>
          <li>Tracks customer acquisition & engagement</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="product">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">🛠️ Product</h2>
        <ul class="list-disc list-inside">
          <li>Defines what is being built and why</li>
          <li>Owns product strategy and roadmap</li>
          <li>Works with users to gather feedback</li>
          <li>Bridges between tech and business</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="engineering">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">💻 Engineering / Development</h2>
        <ul class="list-disc list-inside">
          <li>Builds and maintains the website/app/platform</li>
          <li>Ensures performance, security, and scalability</li>
          <li>Manages infrastructure, DevOps, and tech stack</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="design">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">🎨 Design / UX</h2>
        <ul class="list-disc list-inside">
          <li>Designs interfaces, logos, and visuals</li>
          <li>Ensures great user experience (UX)</li>
          <li>Works closely with product and engineering</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="support">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">💬 Customer Support / Community</h2>
        <ul class="list-disc list-inside">
          <li>Answers questions from users</li>
          <li>Manages feedback and bug reports</li>
          <li>Builds a healthy user community</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="sales">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">💰 Sales</h2>
        <ul class="list-disc list-inside">
          <li>Reaches out to partners, sponsors, clients</li>
          <li>Handles B2B sales, partnerships, licensing</li>
          <li>Works closely with marketing</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="finance">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">🧾 Finance & Accounting</h2>
        <ul class="list-disc list-inside">
          <li>Tracks income, expenses, profits</li>
          <li>Manages payroll, invoices, taxes</li>
          <li>Handles financial reporting and fundraising data</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="legal">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">⚖️ Legal</h2>
        <ul class="list-disc list-inside">
          <li>Ensures compliance (data, privacy, contracts)</li>
          <li>Drafts terms, policies, NDAs</li>
          <li>Manages IP (copyrights, trademarks, etc.)</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="hr">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">👥 Human Resources (HR)</h2>
        <ul class="list-disc list-inside">
          <li>Recruits, hires, and onboards staff</li>
          <li>Manages contracts and performance</li>
          <li>Fosters company culture</li>
        </ul>
      </div>
    </div>
  </div>
</div>
{% endmacro %}

{% set departmentContent = departmentContent %} 