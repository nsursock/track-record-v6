<!-- Department Cards Carousel -->
<div
  id="department-carousel"
  data-carousel='{ "loadingClasses": "opacity-0", "dotsItemClasses": "carousel-dot carousel-active:bg-primary" }'
  class="relative w-full"
>
  <div class="carousel h-80">
    <div class="carousel-body h-full opacity-0">
      <!-- Executive Card -->
      <div class="carousel-slide">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="card-body">
            <div class="flex items-center gap-2 mb-4">
              <span class="icon-[tabler--brain] text-2xl text-primary"></span>
              <h2 class="card-title">Executive / Leadership</h2>
            </div>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--target] text-primary"></span>
                <span>Sets the vision and strategy</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--checkbox] text-primary"></span>
                <span>Makes key business decisions</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--eye] text-primary"></span>
                <span>Oversees all departments</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--users] text-primary"></span>
                <span>Often includes CEO, COO, CFO, etc.</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Marketing Card -->
      <div class="carousel-slide">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="card-body">
            <div class="flex items-center gap-2 mb-4">
              <span class="icon-[tabler--chart-line] text-2xl text-primary"></span>
              <h2 class="card-title">Marketing</h2>
            </div>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--speakerphone] text-primary"></span>
                <span>Promotes the product or service</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--brand-tabler] text-primary"></span>
                <span>Manages brand identity</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--broadcast] text-primary"></span>
                <span>Runs campaigns, SEO, social media, email, PR</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--chart-bar] text-primary"></span>
                <span>Tracks customer acquisition & engagement</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Product Card -->
      <div class="carousel-slide">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="card-body">
            <div class="flex items-center gap-2 mb-4">
              <span class="icon-[tabler--tools] text-2xl text-primary"></span>
              <h2 class="card-title">Product</h2>
            </div>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--clipboard-check] text-primary"></span>
                <span>Defines what is being built and why</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--road] text-primary"></span>
                <span>Owns product strategy and roadmap</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--message-circle] text-primary"></span>
                <span>Works with users to gather feedback</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--arrows-right-left] text-primary"></span>
                <span>Bridges between tech and business</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Engineering Card -->
      <div class="carousel-slide">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="card-body">
            <div class="flex items-center gap-2 mb-4">
              <span class="icon-[tabler--device-laptop] text-2xl text-primary"></span>
              <h2 class="card-title">Engineering / Development</h2>
            </div>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--code] text-primary"></span>
                <span>Builds and maintains the website/app/platform</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--shield-check] text-primary"></span>
                <span>Ensures performance, security, and scalability</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--server] text-primary"></span>
                <span>Manages infrastructure, DevOps, and tech stack</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Design Card -->
      <div class="carousel-slide">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="card-body">
            <div class="flex items-center gap-2 mb-4">
              <span class="icon-[tabler--palette] text-2xl text-primary"></span>
              <h2 class="card-title">Design / UX</h2>
            </div>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--brush] text-primary"></span>
                <span>Designs interfaces, logos, and visuals</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--user-check] text-primary"></span>
                <span>Ensures great user experience (UX)</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--users] text-primary"></span>
                <span>Works closely with product and engineering</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Support Card -->
      <div class="carousel-slide">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="card-body">
            <div class="flex items-center gap-2 mb-4">
              <span class="icon-[tabler--message-circle] text-2xl text-primary"></span>
              <h2 class="card-title">Customer Support / Community</h2>
            </div>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--help] text-primary"></span>
                <span>Answers questions from users</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--bug] text-primary"></span>
                <span>Manages feedback and bug reports</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--users] text-primary"></span>
                <span>Builds a healthy user community</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Sales Card -->
      <div class="carousel-slide">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="card-body">
            <div class="flex items-center gap-2 mb-4">
              <span class="icon-[tabler--cash] text-2xl text-primary"></span>
              <h2 class="card-title">Sales</h2>
            </div>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--heart-handshake] text-primary"></span>
                <span>Reaches out to partners, sponsors, clients</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--building-store] text-primary"></span>
                <span>Handles B2B sales, partnerships, licensing</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--chart-line] text-primary"></span>
                <span>Works closely with marketing</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Finance Card -->
      <div class="carousel-slide">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="card-body">
            <div class="flex items-center gap-2 mb-4">
              <span class="icon-[tabler--receipt] text-2xl text-primary"></span>
              <h2 class="card-title">Finance & Accounting</h2>
            </div>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--calculator] text-primary"></span>
                <span>Tracks income, expenses, profits</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--file-invoice] text-primary"></span>
                <span>Manages payroll, invoices, taxes</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--report-analytics] text-primary"></span>
                <span>Handles financial reporting and fundraising data</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Legal Card -->
      <div class="carousel-slide">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="card-body">
            <div class="flex items-center gap-2 mb-4">
              <span class="icon-[tabler--scale] text-2xl text-primary"></span>
              <h2 class="card-title">Legal</h2>
            </div>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--shield-check] text-primary"></span>
                <span>Ensures compliance (data, privacy, contracts)</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="icon-[tabler--file-text] text-primary"></span>
                <span>Manages contracts and performance</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="carousel-pagination absolute bottom-3 end-0 start-0 flex justify-center gap-3"></div>
</div> 