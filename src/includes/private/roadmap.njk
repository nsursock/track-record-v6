<!-- Roadmap Section -->
<div class="sm:hidden mb-4">
  <select
      id="roadmap-select"
      data-select='{
        "placeholder": "Select roadmap phase...",
        "toggleTag": "<button type=\"button\" aria-expanded=\"false\"><span class=\"me-2 flex\" data-icon></span><span class=\"text-base-content\" data-title></span></button>",
        "toggleClasses": "advance-select-toggle items-center",
        "dropdownClasses": "advance-select-menu max-h-96 overflow-y-auto bg-base-100 shadow-lg rounded-lg border border-base-300",
        "optionClasses": "advance-select-option selected:select-active",
        "optionTemplate": "<div><div class=\"flex items-center\"><div class=\"me-2 flex\" data-icon></div><div class=\"font-semibold text-base-content\" data-title></div></div></div>",
        "extraMarkup": "<span class=\"icon-[tabler--caret-up-down] shrink-0 size-4 text-base-content absolute top-1/2 end-3 -translate-y-1/2\"></span>"
      }'
      class="hidden"
    >
    <option value="">Choose phase...</option>
    <option 
        value="#tabs-roadmap-overview-content" 
        selected
        data-select-option='{
          "icon": "<span class=\"icon-[tabler--home] shrink-0 size-4 text-primary\"></span>"
        }'
      >
        Overview
      </option>
    <option 
        value="#tabs-roadmap-phase1-content"
        data-select-option='{
          "icon": "<span class=\"icon-[tabler--rocket] shrink-0 size-4 text-primary\"></span>"
        }'
      >
        Phase 1
      </option>
    <option 
        value="#tabs-roadmap-phase2-content"
        data-select-option='{
          "icon": "<span class=\"icon-[tabler--chart-line] shrink-0 size-4 text-primary\"></span>"
        }'
      >
        Phase 2
      </option>
    <option 
        value="#tabs-roadmap-phase3-content"
        data-select-option='{
          "icon": "<span class=\"icon-[tabler--cash] shrink-0 size-4 text-primary\"></span>"
        }'
      >
        Phase 3
      </option>
    <option 
        value="#tabs-roadmap-phase4-content"
        data-select-option='{
          "icon": "<span class=\"icon-[tabler--scale] shrink-0 size-4 text-primary\"></span>"
        }'
      >
        Phase 4
      </option>
  </select>
</div>

<nav class="tabs tabs-bordered overflow-x-auto hidden sm:block" aria-label="Roadmap Tabs" role="tablist" aria-orientation="horizontal" data-tab-select="#roadmap-select">
  <button type="button" class="tab active-tab:tab-active active" id="tabs-roadmap-overview" data-tab="#tabs-roadmap-overview-content" aria-controls="tabs-roadmap-overview-content" role="tab" aria-selected="true">
    <span class="icon-[tabler--home] size-5 shrink-0 me-2"></span>
    Overview
  </button>
  <button type="button" class="tab active-tab:tab-active" id="tabs-roadmap-phase1" data-tab="#tabs-roadmap-phase1-content" aria-controls="tabs-roadmap-phase1-content" role="tab" aria-selected="false">
    <span class="icon-[tabler--rocket] size-5 shrink-0 me-2"></span>
    Phase 1
  </button>
  <button type="button" class="tab active-tab:tab-active" id="tabs-roadmap-phase2" data-tab="#tabs-roadmap-phase2-content" aria-controls="tabs-roadmap-phase2-content" role="tab" aria-selected="false">
    <span class="icon-[tabler--chart-line] size-5 shrink-0 me-2"></span>
    Phase 2
  </button>
  <button type="button" class="tab active-tab:tab-active" id="tabs-roadmap-phase3" data-tab="#tabs-roadmap-phase3-content" aria-controls="tabs-roadmap-phase3-content" role="tab" aria-selected="false">
    <span class="icon-[tabler--cash] size-5 shrink-0 me-2"></span>
    Phase 3
  </button>
  <button type="button" class="tab active-tab:tab-active" id="tabs-roadmap-phase4" data-tab="#tabs-roadmap-phase4-content" aria-controls="tabs-roadmap-phase4-content" role="tab" aria-selected="false">
    <span class="icon-[tabler--scale] size-5 shrink-0 me-2"></span>
    Phase 4
  </button>
</nav>

<div class="mt-3">
  <div id="tabs-roadmap-overview-content" role="tabpanel" aria-labelledby="tabs-roadmap-overview">
    <div class="space-y-4">
      <div class="alert alert-info">
        <span class="icon-[tabler--info-circle] size-5"></span>
        <span>A music blog sharing reflective, personal insights inspired by lyrics â€” offering emotional and cultural depth, with a touch of curation.</span>
      </div>
      <div class="stats stats-vertical sm:stats-horizontal shadow w-full text-center">
        <div class="stat">
          <div class="stat-title">Timeline</div>
          <div class="stat-value">6-12 months</div>
          <div class="stat-desc">Flexible pacing based on growth</div>
        </div>
        <div class="stat">
          <div class="stat-title">Target Revenue</div>
          <div class="stat-value">$500-1k/mo</div>
          <div class="stat-desc">From multiple streams</div>
        </div>
        <div class="stat">
          <div class="stat-title">Subscribers</div>
          <div class="stat-value">1k</div>
          <div class="stat-desc">Across all platforms</div>
        </div>
      </div>
    </div>
  </div>
